      <table>
        <thead>
          <tr>
            <th colspan="5" class="cross-sell-title">
              <h5>You May Also Like</h5>
              <i class="ico-circle ico-close ico--small cross-sell-close"></i>
            </th>   
          </tr>
        </thead>
        <tbody>
          <tr class="cross-sell-content">
            <td class="table__image">
  		    <a href="#" class="table__image-inner" style="background-image: url({{  _imove_product.featured_image | img_url: '240x' }}); "></a>
  	      </td>
            <td class="table__name">
  		    <a href="{{-  _imove_product.url -}}" class="table__product">
                <h5 class="flex justify-between cross-product-title">
  		  	    {{- _imove_product.title -}}
              
  		  	    <span class="price flex flex-reverse align-center hidden-lg hidden-md hidden-sm hidden-cart">
  		  		  {%- if  _imove_product.compare_at_price > _imove_product.price -%}
  		  			  <ins>{{ _imove_product.price | money}}<  
  		  			  <del>{{ _imove_product.compare_at_price | money}}</del>
  		  	   	  {%- else -%}
  		  			  {{ _imove_product.price | money}}
  		  		  {%- endif -%}
  		  	    </span><!-- /.price -->  
  		    	<span class="price flex flex-reverse align-center hidden-section">
  		  		  {%- if  _imove_product.compare_at_price > _imove_product.price -%}
