<div id="free-delivery-bar" class="free-delivery-bar">
  <div class="free-delivery-item">
    <img src="{{ section.settings.icon_1 | img_url }}" class="free-delivery-icon">
    <p class="free-delivery-text">{{ section.settings.text_1 }}</p>
  </div>
  <div class="free-delivery-item hidden-xs">
    <img src="{{ section.settings.icon_2 | img_url }}" class="free-delivery-icon">
    <p class="free-delivery-text">{{ section.settings.text_2 }}</p>
  </div>
  <div class="free-delivery-item hidden-xs hidden-sm">
    <img src="{{ section.settings.icon_3 | img_url }}" class="free-delivery-icon">
    <p class="free-delivery-text">{{ section.settings.text_3 }}</p>
  </div>
</div><!-- #free-delivery-bar -->

