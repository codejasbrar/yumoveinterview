{%- assign _section = section.settings -%}
{%- assign section_title = _section.title -%}
<div class="big-joint-support-title">
  <div class="shell">
    <h2 class="big-support-title">
      {{_section.big-support-title}}
    </h2>
    <h3 class="big-support-subtitle">
      {{_section.big-support-subtitle}}
    </h3>
  </div>
</div>
{%- if section_title != blank or section.blocks.size > 0 -%}
  <section class="section section-features">
    <div class="shell">
      {%- if section_title != blank -%}
        <header class="section__head">
          <h3 class="section__title">{{section_title}}</h3><!-- /.section__title -->
        </header><!-- /.section__head -->
      {%- endif -%}

      <div class="section__body">
        <div class="features features--large cols">
          {%- for block in section.blocks -%}
            {%- assign _block = block.settings -%}
            {%- assign block_image = _block.image -%}
            {%- assign block_alt = _block.image_alt -%}
            {%- assign block_title = _block.title -%}

            <div class="feature col col--1of4 flex flex-column justify-between text-center">
              <div class="inner">
                {%- if block_image != blank -%}
                  <div class="feature__image flex align-center justify-center">
                    <img src="{{ block_image | img_url: '100x' }}" alt="{{ block_alt }}" loading="lazy">
                  </div><!-- /.feature__image -->
                {%- endif -%}

                {%- if block_title != blank -%}
                  <div class="feature__content">
                    <h5>{{block_title}}</h5>
                  </div><!-- /.feature__content -->
                {%- endif -%}
              </div>
            </div><!-- /.feature -->
          {%- endfor -%}
        </div><!-- /.features cols -->
      </div><!-- /.section__body -->
    </div><!-- /.shell -->
  </section><!-- /.section section-features -->
{%- endif -%}

{% schema %}
{
  "name": "Features",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "text",
      "id": "big-support-title",
      "label": "Big Support Title"
    },
    {
      "type": "text",
      "id": "big-support-subtitle",
      "label": "Big Support Subtitle"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "image_alt",
          "label": "Image Alt Text"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        }
      ]
    }
  ]
}
{% endschema %}
