<div class="form__step current" id="details">
	<div class="form__step-head">
		<h2 class="form__step-title section__title">
			{%- if _settings.welcome1 != '' -%}
				{{ _settings.welcome1 }}
			{%- else -%}
				Nice to meet you, <span class="user-name"></span>.
			{%- endif -%}
			<br>
			{{ _settings.welcome2 }}
		</h2><!-- /.section__title -->
       
	</div><!-- /.form__step-head -->
  
    <input id="klaviyo_name" type="hidden" name="petname1" value="">
  	<input id="klaviyo_age" type="hidden" name="petage1" value="">
  	<input id="klaviyo_breed" type="hidden" name="petbreed1" value="">

	<div class="form__step-body">
		<div class="form__cols">
			<div class="form__col">
				<div class="form__row">
					<label for="name" class="form__label">Dog's Name</label>

					<div class="form__controls">
						<input type="text" class="field js-required js-get-data js-new-data" name="name" id="name" value="" placeholder="Dog’s name">
					</div><!-- /.form__controls -->
				</div><!-- /.form__row -->
			</div><!-- /.form__col -->

			<div id="breed-select" class="form__col">
				<div class="form__row">
					<label for="breed" class="form__label">Breed</label>

					<div class="form__controls">
						<select class="select js-required js-get-data js-new-data select--tags hidden" name="breed" id="breed" data-placeholder="Dog's breed" style="width: 100%;">
							{% assign breeds = _settings.breeds | newline_to_br | strip_newlines | split: '<br />' %}
                            <option value=""></option>
							{% for breed in breeds %}
								<option value="{{ breed }}">{{ breed }}</option>
							{% endfor %}
						</select>
				</div><!-- /.form__controls -->
				</div><!-- /.form__row -->
			</div><!-- /.form__col -->

			<div  class="form__col age-select">
				<div class="form__row">
					<label for="age" class="form__label">Age</label>

					<div class="form__controls">
						<select id="age-select" class="select js-required js-get-data js-new-data select--dropdown" name="age" id="age" data-placeholder="Dog’s age" style="width: 100%;">
							<option value=""></option>
							<option value="0.1">0-12 months</option>
							<option value="1">1 year old</option>
							<option value="2">2 years old</option>
							<option value="3">3 years old</option>
							<option value="4">4 years old</option>
							<option value="5">5 years old</option>
							<option value="6">6 years old</option>
							<option value="7">7 years old</option>
							<option value="8">8 years old</option>
                          	<option value="9">9 years old</option>
                          	<option value="10">10 years old</option>
                          	<option value="11">11 years old</option>
                          	<option value="12">12 years old</option>
                          	<option value="13">13 years old</option>
                          	<option value="14">14 years old</option>
                          	<option value="15">15 years old</option>
                          	<option value="16">16 years old</option>
                          	<option value="17">17 years old</option>
                          	<option value="18">18 years old</option>
                          	<option value="19">19 years old</option>
                          	<option value="20">20 years or older</option>
						</select>
                      
				</div><!-- /.form__controls -->
				</div><!-- /.form__row -->
			</div><!-- /.form__col -->
		</div><!-- /.form__cols -->

		<div class="form__row">
			<p>{{ _settings.details_text }}</p>
		</div><!-- /.form__row -->
       
	</div><!-- /.form__step-body -->
    <div class="text-and-button">
       <div class="form__row">
          {{ _settings.first_time_text2 }}
        </div><!-- /.form__row -->
	  <div class="form__step-actions">
		<a id="btn--add-name" href="#weight" class="btn btn--small btn--green btn--next btn--add-name">Next</a>
	  </div><!-- /.form__step-actions -->
    </div>
    

	<div class="form__step-error">Please complete all parts of this step</div><!-- /.form__step-error -->
</div><!-- /.form__step -->