              <p class="table__variant">{{- _content_parts[0] -}}</p><!-- /.table__variant -->
            </td>
          </tr>
          <tr class="cross-sell-actions imove-actions">
            <td>
              {% if _imove_product.variants.size > 1 %}
                <select class="cross-sell-select select cross-sell-imove-select">
                  {% for variant in _imove_product.variants %}
                    <option value="{{ variant.id }}">{{ variant.title }}</option>
                  {% endfor %}
                </select>
              {% endif %}
              <input type="hidden" id="imove-variant-id" class="cross-sell-variant-id" value="{{ _imove_variant.id }}">
              <button id="cross-sell-add" class="btn">ADD TO BASKET</button>
            </td> 
