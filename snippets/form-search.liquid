{%- assign search_idx = search_idx | default: 0 | plus: 1 -%}

<div class="form-search">
	<form action="/search" method="get">
		<label for="q-{{ search_idx }}">{{ 'general.search.label' | t }}</label>

		<input type="search" name="q" id="q-{{ search_idx }}" value="{{ search.terms | escape }}" placeholder="{{ 'general.search.placeholder' | t }}" class="search__field">

		<input type="submit" value="{{ 'general.search.submit' | t }}" class="search__btn">
	</form>
</div><!-- /.form__search -->
