{%- assign _section = section.settings -%}
{%- assign _image = _section.author_image -%}
{%- assign _title = _section.author_title -%}
{%- assign _testimonial = _section.testimonial -%}

<section id="yucalm-testimonial" class="section section-slider section-testimonials">
  <div class="shell">
    <div class="section__body">
      {%- include 'testimonial-single' -%}
    </div><!-- /.section__body -->
  </div><!-- /.shell -->
</section><!-- /.section section-slider section--green -->

{% schema %}
{
  "name": "Testimonial",
  "settings": [
    {
      "type": "image_picker",
      "id": "author_image",
      "label": "Author Avatar"
    },
    {
      "type": "text",
      "id": "author_title",
      "label": "Author Name and date"
    },
    {
      "type": "richtext",
      "id": "testimonial",
      "label": "Testimonial"
    }
  ]
}
{% endschema %}