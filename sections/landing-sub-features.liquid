{%- assign _section = section.settings -%}
{%- assign section_title = _section.title -%}
{%- assign section_content = _section.content -%}

{%- if section_title != blank or section.blocks.size > 0 -%}
  <section class="section landing-sub-features">
    <div class="shell">
      {%- if section_title != blank -%}
        <header class="section__head">
          <h2 class="section__title">{{section_title}}</h2><!-- /.section__title -->
        </header><!-- /.section__head -->
      {%- endif -%}
      <div class=".sub-features-content cols flex-column-xs">
         <div class="section-image col col--1of2 flex">
            <div class="section__media"{% if section.settings.featured_image != blank %} style="background-image: url({{ section.settings.featured_image | img_url: '1000x' }});"{% endif %}>
            </div>
         </div>
         <div class="section__body col col--1of2 flex">
           <div class="features features--medium">
             {%- for block in section.blocks -%}
               {%- assign _block = block.settings -%}
               {%- assign block_image = _block.image -%}
               {%- assign block_title = _block.title -%}
               {%- assign block_content = _block.content -%}

               <div class="feature flex justify-between align-start">
                 {%- if block_image != blank -%}
                   <div class="feature__image flex align-center justify-center">
                     <img src="{{ block_image | img_url: '160x' }}" alt="">
                   </div><!-- /.feature__image -->
                 {%- endif -%}

                 {%- if block_title != blank or block_content != blank -%}
                   <div class="feature__content">
                     {%- if block_title != blank -%}
                       <h4>{{block_title}}</h4>
                     {%- endif -%}

                     {{block_content}}

                     {%- if forloop.last and section_content != blank -%}
                       <div class="section__hint">
                         {{ section_content }}
                       </div><!-- /.section__hint -->
                    {%- endif -%}
                  </div><!-- /.feature__content -->
                {%- endif -%}
              </div><!-- /.feature -->
            {%- endfor -%}
          </div><!-- /.features cols -->
        </div><!-- /.section__body -->
      </div><!-- /.sub-features-content -->
     
    </div><!-- /.shell -->
  </section><!-- /.section section-features -->
{%- endif -%}

{% schema %}
{
  "name": "Features",
  "settings": [
    {
      "type": "text",
      "id": "title",
      "label": "Title"
    },
    {
      "type": "richtext",
      "id": "content",
      "label": "Hint"
    },
    {
      "type": "image_picker",
      "id": "featured_image",
      "label": "Featured Image"
    }
  ],
  "blocks": [
    {
      "type": "feature",
      "name": "Feature",
      "settings": [
        {
          "type": "image_picker",
          "id": "image",
          "label": "Image"
        },
        {
          "type": "text",
          "id": "title",
          "label": "Title"
        },
        {
          "type": "richtext",
          "id": "content",
          "label": "Content"
        }
      ]
    }
  ]
}
{% endschema %}
