{% comment %}
  Forgot Password
{% endcomment %}
<div class="form form--recover form--small"> {% comment %}{% if form_submitted %} style="display: block"{% endif %}{% endcomment %}
  {% form 'recover_customer_password' %}
    <div class="form__head">
      <h2 class="form__title section__title hidden-reactivate">{{- 'customer.recover_password.title' | t -}}</h2><!-- /.form__title -->
      <h2 class="form__title section__title hidden-reset">{{- 'customer.recover_password.reactivate_title' | t -}}</h2><!-- /.form__title -->

      <p class="hidden-reactivate">{{- 'customer.recover_password.subtext' | t -}}</p><!-- /.hidden-reactivate -->
      <p class="hidden-reset">{{- 'customer.recover_password.reactivate_subtext' | t -}}</p><!-- /.hidden-reset -->
    </div><!-- /.form__head -->

    {%- assign error_class = 'form__row--error' | prepend: ' ' -%}
    {%- capture error_reset_email -%}{%- if form.errors contains 'form' -%}{{- error_class -}}{%- endif -%}{%- endcapture -%}

    {%- if form.posted_successfully? -%}
      <div class="form__message form__message--success">
        <div class="hidden-reactivate">{{- 'customer.recover_password.success' | t -}}</div><!-- /.hidden-reactivate -->
        <div class="hidden-reset">{{- 'customer.recover_password.reactivate_success' | t -}}</div><!-- /.hidden-reset -->
      </div><!-- /.form-alert -->
    {%- else -%}
      {% if form.errors %}
        <div class="form__errors">
          {{- form.errors | default_errors -}}
        </div><!-- /.form__errors -->
      {% endif %}

      <div class="form__body">
        <div class="form__row{{ error_reset_email }}">
          <label for="field-reset-email" class="form__label">{{- 'customer.recover_password.email' | t -}}</label>

          <div class="form__controls">
            <input type="email" class="field" name="email" id="field-reset-email" value="" placeholder="{{- 'customer.recover_password.email' | t -}}" >
          </div><!-- /.form__controls -->
        </div><!-- /.form__row -->
      </div><!-- /.form__body -->

      <div class="form__actions flex align-center">
        <button type="submit" class="btn btn--green">
          <span class="hidden-reactivate">{{- 'customer.recover_password.submit' | t -}}</span>
          <span class="hidden-reset">{{- 'customer.recover_password.reactivate_submit' | t -}}</span>
        </button>

        <a href="#" class="popup-close">{{ 'customer.recover_password.cancel' | t }}</a>
      </div><!-- /.form__actions -->
    {%- endif -%}
  {% endform %}
</div><!-- /.form -->