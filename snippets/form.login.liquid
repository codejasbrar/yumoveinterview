{% comment %}
  Login
{% endcomment %}
<div class="form form--login form--small"> {% comment %}{% if form_submitted %} style="display: none"{% endif %}{% endcomment %}
  {% form 'customer_login' %}
    {%- assign error_class = 'form__row--error' | prepend: ' ' -%}
    {%- capture error_login_email -%}{%- if form.errors contains 'form' -%}{{- error_class -}}{%- endif -%}{%- endcapture -%}
    {%- capture error_login_password -%}{%- if form.errors contains 'form' -%}{{- error_class -}}{%- endif -%}{%- endcapture -%}

    {% if form.errors %}
      <div class="form__errors">
        {{- form.errors | default_errors -}}
      </div><!-- /.form__errors -->
    {% endif %}

    <div class="form__body">
      <div class="form__row{{ error_login_email }}">
        <label for="field-login-email" class="form__label">{{- 'customer.login.email' | t -}}</label>

        <div class="form__controls">
          <input type="email" class="field" name="customer[email]" id="field-login-email" value="" placeholder="{{- 'customer.login.email_placeholder' | t -}}" >
        </div><!-- /.form__controls -->
      </div><!-- /.form__row -->

      <div class="form__row{{- error_login_password -}}">
        <label for="field-login-password" class="form__label">{{- 'customer.login.password' | t -}}</label>

        <div class="form__controls">
          <input type="password" class="field" name="customer[password]" id="field-login-password" value="" placeholder="{{- 'customer.login.password_placeholder' | t -}}" >
        </div><!-- /.form__controls -->
      </div><!-- /.form__row -->
    </div><!-- /.form__body -->

    <div class="form__actions flex align-center justify-between">
      <button type="submit" class="btn btn--green">
        {{- 'customer.login.sign_in' | t -}}
      </button>
      <div class="login-popup-container">
        <a href="#popup-reset" class="btn--popup"  data-class="popup--reset">{{ 'customer.login.forgot_password' | t }}</a>
        <div class="trouble-logging"><p>{{ 'customer.login.touble_login' | t }}</p></div>
      </div>
      
    </div><!-- /.form__actions -->
  {% endform %}
</div><!-- /.form -->