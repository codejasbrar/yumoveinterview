<div class="form form--contact form--default">
	{% form 'contact' %}
		{%- assign attr_name = 'contact.form.name' | t | handle -%}
		{%- assign attr_phone = 'contact.form.phone' | t | handle -%}
  		<h3 class="contact__title">{{- 'contact.form.title' | t -}}</h3>
		{%- if form.errors -%}
			<div class="form__message form__message--error">
				{{- form.errors | default_errors -}}
			</div><!-- /.form-notice -->
		{%- endif -%}

		{%- if form.posted_successfully? -%}
			<div class="form__message form__message--success">
				{{- 'contact.form.post_success' | t -}}
			</div><!-- /.form-alert -->
		{%- endif -%}

		<div class="form__body">
            <span id="errmsg" class="form__message form__message--error"></span>
			<div class="form__row">
				<label for="field-contact-name" class="form__label">{{ 'contact.form.name' | t }}</label>

				<input type="text" id="field-contact-name" class="field" name="contact[{{ attr_name }}]" placeholder="{{ 'contact.form.name_placeholder' | t }}" autocapitalize="words" value="{{ customer.name | default: form[attr_name] }}" required>
			</div><!-- /.form__row -->

			<div class="form__row">
				<label for="field-contact-email" class="form__label">{{ 'contact.form.email' | t }}</label>

				<input type="email" id="field-contact-email" class="field" name="contact[email]" placeholder="{{ 'contact.form.email_placeholder' | t }}" autocorrect="off" autocapitalize="off" value="{{ customer.email | default: form.email }}" required>
			</div><!-- /.form__row -->
		    {% comment %}
			<div class="form__row">
				<label for="field-contact-phone" class="form__label">{{ 'contact.form.phone' | t }}</label>

				<input type="tel" id="field-contact-phone" class="field" name="contact[{{ attr_phone }}]" placeholder="{{ 'contact.form.phone_placeholder' | t }}" pattern="[0-9\-]*" value="{{ customer.phone | default: form[attr_phone] }}">
			</div><!-- /.form__row -->
			{% endcomment %}
			<div class="form__row">
				<label for="field-contact-message" class="form__label">{{ 'contact.form.message' | t }}</label>

				<textarea rows="5" id="field-contact-message" class="field" name="contact[body]" placeholder="{{ 'contact.form.message_placeholder' | t }}" required>{{ form.body }}</textarea>
			</div><!-- /.form-row -->
          {% comment %}
          <div class="form__row">
            <div class="form__controls">
              <ul class="list-checkboxes">
                <li>
                  <div class="checkbox">
                    <input type="checkbox" name="customer[accepts_marketing]" value="false" id="marketing" />

                    <label for="marketing">{{- 'customer.register.accept_marketing_html' | t -}}</label>
                  </div><!-- /.checkbox -->
                </li>
              </ul><!-- /.list-checkboxes -->
            </div><!-- /.form__controls -->
          </div><!-- /.form-row -->
         {% endcomment %}
		</div><!-- /.form__body -->

		<div class="form__actions clear">
			<button type="submit" class="form__btn btn--green btn btn--form">
				{{- 'contact.form.submit' | t -}}
			</button>
		</div><!-- /.form-actions -->
{% endform %}
</div><!-- /.form -->
