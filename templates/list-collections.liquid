{%- assign exclude = 'frontpage' | split: ',' -%}

<section class="section section-collections">
	<div class="shell">
		<header class="section__head">
			<h2 class="section__title">{{- 'collections.general.title' | t -}}</h2><!-- /.section__title -->
		</header><!-- /.section__head -->

		<div class="section__body">
			<div class="collections--default">
				<div class="collection__items">
					{%- paginate collections by settings.items_per_page -%}
						{%- for collection in collections -%}
							{%- if exclude contains collection.handle -%}
								{%- continue -%}
							{%- endif -%}

							{%- include 'collection-item' _collection: collection -%}
						{%- endfor -%}
					{%- endpaginate -%}
				</div><!-- /.collection__list -->
			</div>
		</div><!-- /.section__body -->
	</div><!-- /.shell -->
</section><!-- /.section section-collections -->
