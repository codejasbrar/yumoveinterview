<!-- TrustBox script -->
<script type="text/javascript" src="//widget.trustpilot.com/bootstrap/v5/tp.widget.bootstrap.min.js" async></script>
<!-- End TrustBox script -->
<div class="brand-sticky-cta">
    <div class="brand-sticky-cta-container">
        <p class="text">{{section.settings.text}}</p>

        <div class="divider"></div>

        <!-- TrustBox widget - Micro Star -->
        <div class="trustpilot-widget" data-locale="en-GB" data-template-id="5419b732fbfb950b10de65e5" data-businessunit-id="5e4e87b71f96930001914d27" data-style-height="24px" data-style-width="100%" data-theme="light">
            <a href="https://uk.trustpilot.com/review/yumove.co.uk" target="_blank" rel="noopener">Trustpilot</a>
        </div>
        <!-- End TrustBox widget -->

        <div class="divider"></div>

        <a href="{{section.settings.url}}" class="brand-sticky-btn btn joint-cta-sub">
            {{section.settings.cta_text}}
        </a>
    </div>
</div>


{% schema %}
  {
    "name": "Sticky CTA Bar",
    "settings": [
      {
        "type": "text",
        "id": "text",
        "label": "Text"
      },
      {
        "type": "text",
        "id": "cta_text",
        "label": "Button Text"
      },
      {
        "type": "url",
        "id": "url",
        "label": "Button Link"
      }
    ]
  }
{% endschema %}

